<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), method: :delete, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: hotpink;"></i>
      <%= book.favorites.count %>
    <% end %>
  </p>
<% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post, remote: true do %>
      <i class="fa fa-heart" aria-hidden="true" style="color: lightskyblue;"></i>
      <%= book.favorites.count %>
    <% end %>
  </p>
<% end %>